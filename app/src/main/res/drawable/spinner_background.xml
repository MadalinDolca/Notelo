<?xml version="1.0" encoding="utf-8"?>

<!-- spinner background -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list>
            <!-- shape -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/background_alt" />
                    <!--<padding android:right="@dimen/padding_container" />-->
                    <corners android:radius="@dimen/radius17" />
                </shape>
            </item>

            <!-- arrow icon -->
            <item android:drawable="@drawable/ic_arrow_drop_down" android:gravity="center_vertical|end" android:right="@dimen/margin_element" />
        </layer-list>
    </item>
</selector>