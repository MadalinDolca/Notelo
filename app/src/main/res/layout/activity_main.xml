<?xml version="1.0" encoding="utf-8"?>

<!-- FragmentContainerView in which the fragments from "main_navigation" will appear -->
<androidx.fragment.app.FragmentContainerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivityFragmentContainerView"
    android:name="androidx.navigation.fragment.NavHostFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:defaultNavHost="true"
    app:navGraph="@navigation/main_navigation"
    tools:context=".core.presentation.MainActivity">
    <!-- NavHost that intercepts and works as the back button on the device -->

</androidx.fragment.app.FragmentContainerView>