<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_small">

    <!-- tag name -->
    <EditText
        android:id="@+id/editTextTagName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageButtonEditUpdate"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- update/save button -->
    <ImageButton
        android:id="@+id/imageButtonEditUpdate"
        style="@style/ImageButtonNoBackgroundStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        app:layout_constraintRight_toLeftOf="@id/imageButtonDeleteCancel"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- delete/cancel button -->
    <ImageButton
        android:id="@+id/imageButtonDeleteCancel"
        style="@style/ImageButtonNoBackgroundStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>