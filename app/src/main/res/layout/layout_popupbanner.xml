<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_rounded_stroke"
    android:orientation="horizontal"
    android:padding="@dimen/padding_container">

    <!-- icon -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/text_big"
        android:layout_height="@dimen/text_big"
        android:src="@drawable/ic_check_circle"
        app:tint="@color/primary" />

    <!-- message -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_element"
        android:text="Text"
        android:textColor="@color/text"
        android:textSize="@dimen/text_standard" />

</LinearLayout>