<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_dialog"
    android:background="@drawable/background_rounded"
    android:backgroundTint="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_container">

        <!-- category name -->
        <EditText
            android:id="@+id/editTextCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/category_name"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- visibility -->
        <TextView
            android:id="@+id/textViewVisibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_element"
            android:text="@string/visibility"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/brightnessSlide" />

        <!-- color picker -->
        <com.skydoves.colorpickerview.ColorPickerView
            android:id="@+id/colorPickerView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/margin_element"
            app:layout_constraintEnd_toStartOf="@id/cardViewColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextCategoryName" />

        <!-- color preview -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewColor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/margin_element"
            app:cardCornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/colorPickerView"
            app:layout_constraintTop_toBottomOf="@id/editTextCategoryName" />

        <!-- brightness slider -->
        <com.skydoves.colorpickerview.sliders.BrightnessSlideBar
            android:id="@+id/brightnessSlide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_element"
            app:borderColor_BrightnessSlider="@color/background_alt"
            app:borderSize_BrightnessSlider="5"
            app:layout_constraintTop_toBottomOf="@id/colorPickerView"
            app:selector_BrightnessSlider="@drawable/wheel" />

        <RadioGroup
            android:id="@+id/radioGroupVisibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_element"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/textViewVisibility">

            <!-- private -->
            <RadioButton
                android:id="@+id/radioButtonPrivate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="@string/_private" />

            <!-- public -->
            <RadioButton
                android:id="@+id/radioButtonPublic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_element"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="@string/_public" />

        </RadioGroup>

        <!-- create/update button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_create_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_separator"
            app:layout_constraintEnd_toStartOf="@id/button_cancel_delete"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioGroupVisibility" />

        <!-- cancel/delete button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_cancel_delete"
            style="@style/ButtonAltStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_element"
            android:layout_marginTop="@dimen/margin_separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_create_update"
            app:layout_constraintTop_toBottomOf="@id/radioGroupVisibility" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>