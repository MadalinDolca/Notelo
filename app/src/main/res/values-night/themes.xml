<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notelo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Custom -->
        <item name="android:windowLightStatusBar">false</item> <!-- dark status bar and light content -->
        <item name="android:windowBackground">@color/background</item> <!-- window background color -->
        <item name="android:textSize">@dimen/text_standard</item>
        <item name="android:textColor">@color/text</item>
        <item name="editTextStyle">@style/EditText</item> <!-- EditText style -->
        <item name="buttonStyle">@style/Button</item>
    </style>

</resources>