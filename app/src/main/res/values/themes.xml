<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notelo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Custom -->
        <item name="android:windowLightStatusBar">true</item> <!-- light status bar and dark content -->
        <item name="android:windowBackground">@color/background</item> <!-- window background color -->

        <!-- Text -->
        <item name="android:textSize">@dimen/text_standard</item>
        <item name="android:textColor">@color/text</item>

        <!-- Widgets -->
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="radioButtonStyle">@style/RadioButtonFlatStyle</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
        <item name="tabStyle">@style/TabLayoutStyle</item>
<!--        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogStyle</item>-->
    </style>

</resources>