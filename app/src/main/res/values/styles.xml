    <!-- EditText -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_rounded</item>
        <item name="android:backgroundTint">@color/background_alt</item>
        <item name="android:padding">@dimen/padding_container</item>
    </style>

    <!-- Clickable TextView -->
    <style name="TextViewClickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Button -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_rounded</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:padding">@dimen/padding_container</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>

    <!-- RadioButton -->
    <style name="RadioButtonFlatStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radio_button_selector_background</item>
        <item name="android:textColor">@drawable/radio_button_selector_text_selector</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <!-- Spinner -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@drawable/spinner_popup_background</item>
    </style>

    <!-- TabLayout -->
    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabIndicator">@drawable/background_rounded</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@color/text_on_primary</item>
        <item name="tabTextColor">@color/text</item>
    </style>

    <!-- Bottom Sheet Dialog -->
    <style name="BottomSheetDialogStyle">
        <item name="android:windowIsFloating">false</item>
        <item name="android:colorBackground">@null</item>
        <!--        <item name="android:layout_margin">2dp</item>-->

        <!-- components -->
